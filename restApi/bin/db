#!/bin/bash
# BestSelf API DB Script

# Stop on errors
set -e
set -u

#Database name
HOST_NAME=${2:-localhost}

# Sanity check command line options
usage() {
  echo "Usage: $0 (create|create-clean|destroy|reset|start|stop)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

# Parse argument.  $1 is the first argument
case $1 in
  "create-clean")
      echo "CREATING DATABASE"
      psql \
        -h $HOST_NAME \
        -f sql/create.sql \
        --echo-all \
        --set ON_ERROR_STOP=on
      echo "SUCCESSFULLY CREATED DATABASE"
    ;;
  "create")
      echo "CREATING DATABASE"
      psql \
        -h $HOST_NAME \
        -f sql/create.sql \
        --echo-all \
        --set ON_ERROR_STOP=on
      echo "POPULATING DATABASE"
      psql \
        -h $HOST_NAME \
        -f sql/populate.sql \
        --echo-all \
        --set ON_ERROR_STOP=on
      echo "SUCCESSFULLY CREATED DATABASE"
    ;;

  "destroy")
      echo "DESTROYING DATABASE"
      psql \
        -h $HOST_NAME \
        -f sql/drop.sql \
        --echo-all \
        --set ON_ERROR_STOP=on
      echo "DROPPED TABLES"
      psql -c "DROP DATABASE bestself"
      echo "DROPPED DATABASE"
    ;;
  "reset-prod")
      bin/db destroy
      bin/db create-clean
    ;;
  "reset")
      bin/db destroy
      bin/db create
    ;;

  "start")
      pg_ctl -D /usr/local/var/postgres start && brew services start postgresql
    ;;
    "stop")
      brew services stop postgresql
    ;;
    "random")
      echo "Still need to implement"
    ;;
  *)
    usage
    exit 1
    ;;
esac

# psql -f sql/create.sql --echo-all 
